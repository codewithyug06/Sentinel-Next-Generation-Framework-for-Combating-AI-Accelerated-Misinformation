{
  "manifest_version": 3,
  "name": "Project Sentinel",
  "version": "0.2",
  "description": "Cognitive Shield, Genesis, Echo Chamber",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "webNavigation",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
